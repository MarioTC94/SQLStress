@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SQLStress.Core.ViewModels.InfoRequestModel

<h2>Test de estrés de una base de datos</h2>

@{
	var options = new AjaxOptions() {
		LoadingElementId = "loading",
		HttpMethod = "POST",
		OnSuccess = "RequestModule.SuccessStress"
	};
}
@using (Ajax.BeginForm(options)) {
	@Html.AntiForgeryToken()
	<div class="form-group">
		@Html.LabelFor(model => model.DataBaseName, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size: 15px" })
		<div class="col-md-4">
			@Html.DropDownListFor(model => model.DataBaseName, ViewBag.DatabaseNameList as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.DataBaseName, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.TableName, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size: 15px" })
		<div class="col-md-4">
			@Html.DropDownListFor(x=>x.TableName,new List<SelectListItem>(), htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.TableName, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.CantRequest, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size: 15px" })
		<div class="col-md-4">
			@Html.EditorFor(model => model.CantRequest, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.CantRequest, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.CantThreads, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size: 15px" })
		<div class="col-md-4">
			@Html.EditorFor(model => model.CantThreads, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.CantRequest, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Realizar Proceso" class="btn btn-default" />
		</div>
	</div>

}

@section Scripts{
	<script src="~/Resources/Content/Script/Request/Request.js"></script>
}




