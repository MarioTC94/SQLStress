@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SQLStress.Core.ViewModels.ConecctionCredential

<h2>Conexión con el Servidor</h2>
@{
	var options = new AjaxOptions() {
		LoadingElementId = "loading",
		HttpMethod = "POST",
		OnSuccess = "IndexModule.SuccessConnection"
	};
}
@using (Ajax.BeginForm(options)) {
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.Server, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size: 15px" })
			<div class="col-md-4">
				@Html.EditorFor(model => model.Server, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Server, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-4">
				@Html.LabelFor(model => model.WindowsAuthentication, htmlAttributes: new { @class = "control-label", @style = "font-size: 15px" })

				@Html.CheckBoxFor(model => model.WindowsAuthentication)
				@Html.ValidationMessageFor(model => model.WindowsAuthentication, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.User, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size: 15px" })
			<div class="col-md-4">
				@Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size: 15px" })
			<div class="col-md-4">
				@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
			</div>
		</div>


		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Probar conexión" class="btn btn-default" />
			</div>
		</div>
	</div>
}

@section Scripts{
	<script src="~/Resources/Content/Script/Home/Index.js"></script>
}