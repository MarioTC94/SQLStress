<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Vendors/css")
	@Styles.Render("~/Shared/css")
	@RenderSection("styles", required: false)
</head>
<body>
	@{ Html.RenderPartial("~/Views/Shared/NavBar/_NavPaginaPrincipal.cshtml");}
	<div class="container body-content">
		@RenderBody()
		<footer style="position:fixed; left:0px; bottom:0px; background-color:dodgerblue; width:100%; float:left">
			<div class="container">
				<div class="row">
					<div class="col-md-6 copy">
						<span style="color:white;">SQL Stress - COPYRIGHT &#169 <?= date("Y"); ?> All Rights Reserved </span>
						<h3 style="color:white">Contacto</h3>
						<hr style="background-color: white; height: 1px; border: 0;">
						<p style="color:white">Correo electrónico: admin@SQLStress.com</p>
						<p style="color:white">Teléfono: 2348-5784</p>
					</div>
					<div class="col-md-6 text-right social">
						<p style="color:white; font-size:20px">Búscanos en </p>
						<div class="social-buttons">	
								<i class="fab fa-facebook" style="font-size:30px"></i>		
							
								<i class="fab fa-github"style="font-size:30px"></i>
						
								<i class="fab fa-twitter"style="font-size:30px"></i>
							
						</div>
					</div>
				</div>
			</div>
		</footer>
	</div>

	@*
		ALL PARTIAL VIEWS
	*@
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalSuccess.cshtml"); }
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalOptional.cshtml"); }
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalDanger.cshtml"); }
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalWarning.cshtml"); }

	@Scripts.Render("~/Vendors/js")
	@RenderSection("scripts", required: false)
	<script src="~/Resources/Content/Script/Helpers/Commons.script.js"></script>
	<script src="~/Resources/Content/Script/Helpers/Generic.script.js"></script>
	<script src="~/Resources/Content/Script/Helpers/Modal.script.js"></script>
</body>
</html>
