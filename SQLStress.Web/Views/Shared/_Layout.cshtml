<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Vendors/css")
	@Styles.Render("~/Shared/css")
	@RenderSection("styles", required: false)
</head>
<body>
	@{ Html.RenderPartial("~/Views/Shared/NavBar/_NavPaginaPrincipal.cshtml");}
	<div class="container body-content">
		@RenderBody()
    </div>

<div class="container">
        <div class="card h-100 w-100" style="max-width: 35rem; max-height:0rem; margin: 0 auto; float: none;  margin-bottom: 0px;">
            <div class="card-header", style="background-color:dodgerblue; font-size=5ex; font-weight:bold;"><h3>Conectar Servidor</h3></div>
            <div class="card-body">
                <div class="row">
                    <div class="col">Tipo de Servidor</div>
                    <div class="col"><input typle="text"/></div>
                    <div class="w-100"></div>
                    <p></p>
                    <div class="col">Nombre del Servidor</div>
                    <div class="col"><input typle="text"/></div>
                    <div class="w-100"></div>
                    <p></p>
                    <div class="col">Hostname:Port</div>
                    <div class="col"><input typle="text"/></div>
                    <div class="w-100"></div>                    
                </div>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-primary" , style="background-color:dodgerblue">Conectar</a>
                <a href="#" class="btn btn-primary" , style="background-color:dodgerblue">Cancelar</a>
            </div>
        </div>
</div>
         
	@{ Html.RenderPartial("~/Views/Shared/Footer/_FooterPrincipal.cshtml");}

	@*
		ALL PARTIAL VIEWS
	*@
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalSuccess.cshtml"); }
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalOptional.cshtml"); }
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalDanger.cshtml"); }
	@{ Html.RenderPartial("~/Views/Shared/Modals/_ModalWarning.cshtml"); }

	@Scripts.Render("~/Vendors/js")
	@RenderSection("scripts", required: false)
	<script src="~/Resources/Content/Script/Helpers/Commons.script.js"></script>
	<script src="~/Resources/Content/Script/Helpers/Generic.script.js"></script>
	<script src="~/Resources/Content/Script/Helpers/Modal.script.js"></script>
</body>
</html>
