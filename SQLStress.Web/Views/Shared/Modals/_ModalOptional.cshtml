<div class="remodal" data-remodal-id="modalOptional" data-remodal-options="hashTracking: false, closeOnOutsideClick: false" style="background-color:rgb(56,56,56)">
    <header class="modal__header">
        <div class="row">
            <div class="col-md-2">
                <i class="fas fa-question" style="font-size:50px;color:whitesmoke"></i>
            </div>
            <div class="col-md-10 align-middle">
                <h5 style="color:whitesmoke;font-weight:bold;font-size:15px; position: absolute; top: 50%; transform: translateY(-50%);" id="textContainerOptional">
                </h5>
            </div>
        </div>
    </header>
    <div class="modal__body l_columns l_columns--centered-content">
        <button data-remodal-action="confirm" class="btn remodal-confirm" style="background-color:rgb(56,56,56);color:white;border:none; position:relative;">Aceptar</button>
        <button data-remodal-action="close" class="btn remodal-cancel" style="background-color:rgb(56,56,56);color:white;border:none; position:relative;">Cancelar</button>
    </div>
</div>
