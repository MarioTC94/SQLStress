<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>SQL Stress Menú Pricipal</title>
	@Styles.Render("~/Vendors/css")
	@Styles.Render("~/Shared/css")
	@RenderSection("styles", required: false)
</head>
<body>
    @{ Html.RenderPartial("~/Views/Shared/NavBar/_NavPaginaPrincipal.cshtml");}
    @RenderBody()
    <div class="container">
        <div class="row justify-content-md-end">
         <div class="col-4" style="padding:5px; left:80px">
                <h1 style="font-size: 25px; color: dodgerblue;"> Ingrese los datos requeridos</h1>
                <form>
                    <div class="form-group">
                        <label for="formGroup">Nombre de la base de datos</label>
                        <input type="text" class="form-control" id="NombreBase" placeholder="Nombre de la base de datos.." style="width:250px">
                    </div>
                    <div class="form-group">
                        <label for="formGroup">Nombre de la tabla</label>
                        <input type="text" class="form-control" id="NombreTabla" placeholder="Nombre de la tabla.." style="width:250px">
                    </div>
                    <div class="form-group">
                        <label for="formGroup">Cantidad de hilos requeridos</label>
                        <input type="text" class="form-control" id="CantidadHilos" placeholder="Cantidad de hilos.." style="width:250px">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Realizar proceso de estrés</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @{ Html.RenderPartial("~/Views/Shared/Footer/_FooterPrincipal.cshtml");}
</body>
</html>
